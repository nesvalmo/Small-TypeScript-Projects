{
  "name": "live_poll",
  "version": "0.1.0",
  "description": "simple vanilla TS full-stack live poll",
  "main": "dist/backend/server.js",
  "scripts": {
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "tsc -p tsconfig.frontend.json",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "node dist/backend/server.js",
    "dev:build:backend": "tsc -p tsconfig.backend.json -w",
    "dev:build:frontend": "tsc -p tsconfig.frontend.json -w",
    "dev:run": "nodemon dist/backend/server.js",
    "dev": "concurrently \"npm:dev:build:backend\" \"npm:dev:build:frontend\" \"npm:dev:run\""
  },
  "dependencies": {
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/ws": "^8.5.5",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6"
  }
}